{
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11",
        "installCommand": "pip install -r backend/requirements.txt"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "backend/api/index.py" }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}
